{
  "name": "StokCerdasMobile",
  "displayName": "StokCerdas",
  "slug": "stokcerdas-mobile",
  "version": "1.0.0",
  "orientation": "portrait",
  "icon": "./src/assets/images/icon.png",
  "userInterfaceStyle": "automatic",
  "splash": {
    "image": "./src/assets/images/splash.png",
    "resizeMode": "contain",
    "backgroundColor": "#ffffff"
  },
  "assetBundlePatterns": ["**/*"],
  "ios": {
    "supportsTablet": true,
    "bundleIdentifier": "com.stokcerdas.mobile",
    "buildNumber": "1.0.0",
    "infoPlist": {
      "NSCameraUsageDescription": "Aplikasi ini memerlukan akses kamera untuk scan barcode produk",
      "NSLocationWhenInUseUsageDescription": "Aplikasi ini menggunakan lokasi untuk menentukan lokasi gudang",
      "NSContactsUsageDescription": "Aplikasi ini memerlukan akses kontak untuk berbagi data supplier",
      "NSPhotoLibraryUsageDescription": "Aplikasi ini memerlukan akses galeri untuk upload foto produk"
    }
  },
  "android": {
    "adaptiveIcon": {
      "foregroundImage": "./src/assets/images/adaptive-icon.png",
      "backgroundColor": "#ffffff"
    },
    "package": "com.stokcerdas.mobile",
    "versionCode": 1,
    "permissions": [
      "android.permission.CAMERA",
      "android.permission.ACCESS_FINE_LOCATION",
      "android.permission.ACCESS_COARSE_LOCATION",
      "android.permission.READ_EXTERNAL_STORAGE",
      "android.permission.WRITE_EXTERNAL_STORAGE",
      "android.permission.INTERNET",
      "android.permission.ACCESS_NETWORK_STATE",
      "android.permission.VIBRATE"
    ]
  },
  "web": {
    "favicon": "./src/assets/images/favicon.png",
    "bundler": "metro"
  },
  "extra": {
    "eas": {
      "projectId": "stokcerdas-mobile-id"
    }
  }
}