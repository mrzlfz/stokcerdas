# StokCerdas Development Environment Configuration

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=StokCerdas
APP_URL=http://localhost:3000
APP_VERSION=1.0.0

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=stokcerdas_dev
POSTGRES_USER=stokcerdas
POSTGRES_PASSWORD=stokcerdas_password
DATABASE_URL=postgresql://stokcerdas:stokcerdas_password@localhost:5432/stokcerdas_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=stokcerdas
RABBITMQ_PASS=stokcerdas_queue
RABBITMQ_VHOST=stokcerdas_vhost
RABBITMQ_URL=amqp://stokcerdas:stokcerdas_queue@localhost:5672/stokcerdas_vhost

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://localhost:9200

# MinIO Configuration (Development S3)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=stokcerdas-dev
MINIO_USE_SSL=false

# Security Configuration (Development keys - DO NOT USE IN PRODUCTION)
JWT_SECRET=dev_jwt_secret_key_32_characters_minimum
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=dev_jwt_refresh_secret_32_characters_min
JWT_REFRESH_EXPIRATION=7d
ENCRYPTION_KEY=dev_encryption_key_32_chars_min
ENCRYPTION_ALGORITHM=AES-256-GCM
BCRYPT_ROUNDS=10
SESSION_SECRET=dev_session_secret_key_here

# Email Configuration (MailHog for development)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=dev@stokcerdas.com
MAIL_FROM_NAME=StokCerdas Dev

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_DATE_FORMAT=YYYY-MM-DD HH:mm:ss
LOG_FILE_PATH=./logs/dev.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Development Tools
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/docs
DEBUG_MODE=true
DEVELOPMENT_LOGGING=true

# Feature Flags (All enabled for development)
FEATURE_AI_FORECASTING=true
FEATURE_MULTI_CHANNEL=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_MOBILE_APP=true

# Indonesian Localization
DEFAULT_LANGUAGE=id
DEFAULT_TIMEZONE=Asia/Jakarta
DEFAULT_CURRENCY=IDR
DEFAULT_COUNTRY=ID

# Security (Relaxed for development)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8081
TRUSTED_PROXIES=127.0.0.1,::1

# File Upload
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,csv
UPLOAD_DIRECTORY=./uploads

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001
WEBSOCKET_REDIS_ADAPTER=true

# Health Check Configuration
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_RABBITMQ=true
HEALTH_CHECK_ELASTICSEARCH=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://stokcerdas:stokcerdas_password@localhost:5432/stokcerdas_test
TEST_REDIS_URL=redis://localhost:6379/1